<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_currentTwoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Current"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tv_baselineTwoTitle"
        app:layout_constraintTop_toBottomOf="@+id/tv_baselineTwoTitle" />

    <TextView
        android:id="@+id/tv_currentOneTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Current"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tv_baselineOneTitle"
        app:layout_constraintTop_toBottomOf="@+id/tv_baselineOneTitle" />

    <TextView
        android:id="@+id/tv_baselineTwo"
        android:layout_width="302dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text=""
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/tv_baselineTwoTitle"
        app:layout_constraintTop_toBottomOf="@+id/tv_targetTwoTitle" />

    <EditText
        android:id="@+id/et_currentTwo"
        android:layout_width="307dp"
        android:layout_height="33dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tv_baselineTwo"
        app:layout_constraintTop_toBottomOf="@+id/tv_baselineTwo" />

    <EditText
        android:id="@+id/et_currentOne"
        android:layout_width="307dp"
        android:layout_height="33dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tv_baselineOne"
        app:layout_constraintTop_toBottomOf="@+id/tv_baselineOne" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="260dp"
        android:layout_height="77dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="Take urgent and significant action to reduce the
degradation of natural habitats, halt the loss of biodiversity
and, by 2020, protect and prevent the extinction of
threatened species"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/tv_target2" />

    <TextView
        android:id="@+id/tv_targetTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="Ensure 10+ species are on a recovery path"
        app:layout_constraintStart_toEndOf="@+id/tv_targetTwoTitle"
        app:layout_constraintTop_toBottomOf="@+id/tv_kpiTwo" />

    <TextView
        android:id="@+id/tv_kpiTwo"
        android:layout_width="62dp"
        android:layout_height="22dp"
        android:layout_marginTop="16dp"
        android:text="KPI Two"
        android:textColor="#70D0D8"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/tv_baselineTwoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Baseline"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tv_targetTwoTitle"
        app:layout_constraintTop_toBottomOf="@+id/tv_targetTwoTitle" />

    <TextView
        android:id="@+id/tv_targetTwoTitle"
        android:layout_width="64dp"
        android:layout_height="18dp"
        android:layout_marginTop="12dp"
        android:text="Target"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tv_kpiTwo"
        app:layout_constraintTop_toBottomOf="@+id/tv_kpiTwo" />

    <TextView
        android:id="@+id/tv_target2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="100dp"
        android:text="Target 15.5"
        android:textColor="#52C1C9"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/tv_baselineOneTitle" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="111dp"
        android:layout_height="107dp"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="@+id/tv_baselineOneTitle"
        app:layout_constraintTop_toBottomOf="@+id/tv_baselineOneTitle"
        app:srcCompat="@drawable/sdg_15" />

    <TextView
        android:id="@+id/tv_targetOneTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Target"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tv_kpiOne"
        app:layout_constraintTop_toBottomOf="@+id/tv_kpiOne" />

    <TextView
        android:id="@+id/tv_formTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Update Metrics"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_formSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="111dp"
        android:layout_height="107dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_formTitle"
        app:srcCompat="@drawable/sdg_15" />

    <TextView
        android:id="@+id/tv_target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="Target 15.2"
        android:textColor="#52C1C9"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/tv_formTitle" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="260dp"
        android:layout_height="77dp"
        android:layout_marginTop="8dp"
        android:text="By 2020, promote the implementation of sustainable
management of all types of forests, halt deforestation,
restore degraded forests and substantially increase
afforestation and reforestation globally"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_target"
        app:layout_constraintTop_toBottomOf="@+id/tv_target" />

    <TextView
        android:id="@+id/tv_targetOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:text="Aim for 100,000 acres of land restoration"
        app:layout_constraintStart_toEndOf="@+id/tv_targetOneTitle"
        app:layout_constraintTop_toTopOf="@+id/tv_targetOneTitle" />

    <TextView
        android:id="@+id/tv_kpiOne"
        android:layout_width="59dp"
        android:layout_height="24dp"
        android:layout_marginTop="12dp"
        android:text="KPI One"
        android:textColor="#70D0D8"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/tv_baselineOneTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Baseline"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tv_targetOneTitle"
        app:layout_constraintTop_toBottomOf="@+id/tv_targetOneTitle" />

    <TextView
        android:id="@+id/tv_baselineOne"
        android:layout_width="302dp"
        android:layout_height="24dp"
        android:layout_marginTop="12dp"
        android:text=""
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tv_targetOne"
        app:layout_constraintTop_toBottomOf="@+id/tv_targetOne" />

</androidx.constraintlayout.widget.ConstraintLayout>